    <% posts.reverse().forEach( function(elem){%>
      <div class="post mt-10 w-full min-h-[50vh]">
        <div class="title px-4 flex items-center gap-2">
          <div class="w-[8vw] h-[8vw] bg-sky-100 rounded-full">
            <img class="w-full h-full object-cover overflow-hidden" src="/images/uploads/<%= elem.user.profileImage%>" alt="">
          </div>
          <h4 class="text-sm"><%= elem.user.username %></h4>
          <!-- elem.user.username kyo ki apn ne jo data save karya hai bo uers mai karya hai to phle
             foreach ka elem likha te hai fir jaha data save use likha te hai fir jo chahiye bo likha te hai -->
         
          <h6 class="text-xs opacity-30">1d</h6>
        </div>
        <div class="w-full h-96 mt-4 bg-sky-100">
          <% const videoExtensions = ['mp4', 'webm', 'ogg']; %>
      
          <% if (elem.media) { %>
              <% const fileExtension = elem.media.split('.').pop().toLowerCase(); %>
      
              <% if (videoExtensions.includes(fileExtension)) { %>
                  <video class=" w-full h-full object-cover overflow-hidden"  autoplay >
                      <source src="/images/uploads/<%= elem.media %>" type="video/<%= fileExtension %>">
                  </video>
              <% } else { %>
                  <img data-id="<%= elem._id %>" class="imge w-full h-full object-cover overflow-hidden" src="/images/uploads/<%= elem.media %>" alt="">
              <% } %>
          <% } else { %>
              <!-- Handle the case when elem.media is undefined or not set -->
              <p>No media available</p>
          <% } %>
      </div>
      
        <div class="options w-full px-4 flex justify-between items-center text-[1.4rem]">
