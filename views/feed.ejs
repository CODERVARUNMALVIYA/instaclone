           <a href="/comment/<%= elem._id %>"><i class="ri-chat-3-line"></i></a>

            <i class="ri-share-circle-line"></i>
          </div>
          <i data-id="<%=elem._id %>" class="postsave <%=user.postsave.indexOf(elem._id) === -1 ? 'ri-bookmark-line' : 'text-white ri-bookmark-fill'%>"></i>
        </div>
        <h3 class="likes px-4 mt-2 text-sm leading-none tracking-tight"><%= elem.likes.length%> likes</h3>
        <h2 class="text-white font-light text-sm mt-2"><span class="font-semibold pl-4 pr-2"><%= elem.user.username %></span><%= elem.caption%></h2>
